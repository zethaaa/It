<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="modelo.Pacientes" table="pacientes">
        <id name="id" type="long">
            <column name="id" />
            <generator class="identity"/>
        </id>
        <property name="nombre" type="string">
            <column name="nombre" length="100" not-null="true"/>
        </property>
        <property name="edad" type="int">
            <column name="edad" not-null="true"/>
        </property>
        <property name="genero" type="string">
            <column name="genero" length="20" not-null="true"/>
        </property>
        <property name="fechaRegistro" type="date">
            <column name="fecha_registro" not-null="true"/>
        </property>
        <property name="telefono" type="string">
            <column name="telefono" length="20" not-null="true"/>
        </property>
        <property name="email" type="string">
            <column name="email" length="100" not-null="true"/>
        </property>
        <property name="direccion" type="string">
            <column name="direccion" length="255" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
